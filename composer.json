{
    "name": "studossoftware/redacao1000",
    "description": "Redacao1000 Integration",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.12",
        "guzzlehttp/guzzle": "^7.2",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "2.*"
    },
    "authors": [
        {
            "name": "Thiago Paes",
            "email": "thiago@studos.com.br"
        }
    ],
    "autoload": {
        "psr-4": {
            "Studos\\Redacao1000\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Studos\\Redacao1000\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "bash .hooks/setup.sh"
        ],
        "fix-code-style": [
            "php-cs-fixer fix --config=config_code_style.php_cs",
            "bash .hooks/setup.sh"
        ]
    }
}
